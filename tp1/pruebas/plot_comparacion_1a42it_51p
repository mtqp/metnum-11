#!/usr/bin/gnuplot -persist
load 'error_relativo'

#le pone titulo al grafico
set title "Error relativo en funcion la cantidad de terminos de la serie"

#pone la descripccion de los ejes
set xlabel "Iteraciones"
set ylabel "Error relativo"


set output 'truncamiento/graficos/comparacion_greg-ram.eps'
plot[3:12][-1e-4:1e-4]	'truncamiento/data/machin/machin_1a42it_51p.dat' using 1:(er($2)) title "Machin" linestyle 4,\
						'truncamiento/data/ramanujan/ramanujan_1a42it_51p.dat' using 1:(er($2)) title "Ramanujan" linestyle 3,\
						0 title "cero" linestyle 1

set logscale y

set output 'truncamiento/graficos/comparacion_1a42it_51p.eps'
plot	'truncamiento/data/gregory/gregory_1a42it_51p.dat' using 1:(er($2)) title "Gregory" linestyle 1,\
		'truncamiento/data/machin/machin_1a42it_51p.dat' using 1:(er($2)) title "Machin" linestyle 2,\
		'truncamiento/data/ramanujan/ramanujan_1a42it_51p.dat' using 1:(er($2)) title "Ramanujan" linestyle 3

#pongo la salida default para mostrar en pantalla
set term pop
set output
replot
