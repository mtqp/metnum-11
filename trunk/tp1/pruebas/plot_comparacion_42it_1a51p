#!/usr/bin/gnuplot -persist
load 'error_relativo'

#le pone titulo al grafico
set title "Error relativo en funcion de la cantidad de digitos"

#pone la descripccion de los ejes
set xlabel "Digitos"
set ylabel "Error relativo"

set logscale y

set output 'truncamiento/graficos/comparacion_42it_1a51p.eps'
plot	'truncamiento/data/gregory/gregory_42it_1a51p.dat' using 1:(er($2)) title "Gregory" linestyle 1 with lines,\
		'truncamiento/data/machin/machin_42it_1a51p.dat' using 1:(er($2)) title "Machin" linestyle 2 with lines,\
		'truncamiento/data/ramanujan/ramanujan_42it_1a51p.dat' using 1:(er($2)) title "Ramanujan" linestyle 3 with lines
		
set output 'truncamiento/graficos/comparacion_5it_1a51p.eps'
plot	'truncamiento/data/gregory/gregory_5it_1a51p.dat' using 1:(er($2)) title "Gregory 5it" linestyle 1 with lines,\
		'truncamiento/data/machin/machin_5it_1a51p.dat' using 1:(er($2)) title "Machin 5it" linestyle 2 with lines,\
		'truncamiento/data/ramanujan/ramanujan_5it_1a51p.dat' using 1:(er($2)) title "Ramanujan 5it" linestyle 3 with lines

#pongo la salida default para mostrar en pantalla
set term pop
set output
replot
