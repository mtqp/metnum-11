#!/usr/bin/gnuplot -persist
load 'plot_style'

set key bottom right

#le pone titulo al grafico
set title "Ajuste de parámetro epsilon maximizando número de condición obtenido"

#pone la descripccion de los ejes
set xlabel "Dimensión de la matriz"
set ylabel "Número de condicion de la matriz"

set logscale y

set output 'graficos/ajuste_epsilon.eps'
plot	'data/ajuste_epsilon.dat' using 1:(int($0)%7==0?$3:1/0) title "1" linestyle 1,\
		'data/ajuste_epsilon.dat' using 1:(int($0)%7==1?$3:1/0) title "0.1" linestyle 2,\
		'data/ajuste_epsilon.dat' using 1:(int($0)%7==2?$3:1/0) title "0.01" linestyle 3,\
		'data/ajuste_epsilon.dat' using 1:(int($0)%7==3?$3:1/0) title "0.001" linestyle 4,\
		'data/ajuste_epsilon.dat' using 1:(int($0)%7==4?$3:1/0) title "0.0001" linestyle 5,\
		'data/ajuste_epsilon.dat' using 1:(int($0)%7==5?$3:1/0) title "0.00001" linestyle 6,\
		'data/ajuste_epsilon.dat' using 1:(int($0)%7==6?$3:1/0) title "0.000001" linestyle 7

#pongo la salida default para mostrar en pantalla
set term pop
set output
replot
